import turtle
import os

enemy = turtle.Turtle()
enemy.color("grean")
enemy.shape("circle")
enemy.penup()
enemy.speed(0)
enemy.setposition(-200, 250)

enemyspeed = 2

while True:
  x = enemy.xcor()
  x += enemyspeed
  enemy.setx(x)
  
  if enemy.xcor() > 280:
    enemyspeed *= -1
    
   
  if enemy.xcor() < -280
    enemyspeed *= -1
  
  
































while True:
